<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
  <article class="blog-post mt-4">
    <h2 class="post-title"><%= link_to post.title, post %></h2>
    <p class="blog-post-meta"><%= display_date_time(post.created_at) %> by <%= post.user.username %></p>
    <p><%= post_preview(post.body) %></p>
    <%= link_to 'Continue reading', post %>
  </article>
<% end %>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary mt-3' %>